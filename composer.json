{
    "name": "nanophp/nanophp",
    "description": "A lightweight, elegant PHP framework for modern web applications",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "framework",
        "nanophp",
        "php",
        "web"
    ],
    "homepage": "https://github.com/nanophp/nanophp",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ermradulsharma/nanophp-framework"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ermradulsharma/nanophp-installer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "php": ">=8.1",
        "dragonmantank/cron-expression": "^3.6",
        "league/flysystem": "3.0",
        "nanophp/framework": "dev-main",
        "symfony/process": "^7.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "phpunit/phpunit": "^10.0",
        "psy/psysh": "^0.12.19"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}